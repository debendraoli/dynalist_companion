# https://editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

# Docstrings and comments use max_line_length = 79
[*.py]
indent_size = 4
max_line_length = 119

[*.md]
trim_trailing_whitespace = false

[*.txt]
indent_style = tab
indent_size = 4
